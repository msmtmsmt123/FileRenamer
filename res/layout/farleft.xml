<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
    
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
        
		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
            
			<TextView
				android:textStyle="bold"
				android:textColor="@android:color/black"
				android:gravity="center"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Add Numbers"
				android:layout_weight="1.0" />
        
		</LinearLayout>
        
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:isScrollContainer="true"
			android:overScrollMode="ifContentScrolls">
        
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textColor="@android:color/black"
				android:text="Starting Number:" />
            
			<EditText
				android:id="@+id/etStartNumber"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:singleLine="true"
				android:textColor="@android:color/black"
				android:inputType="number" />
            
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textColor="@android:color/black"
				android:text="Increment or Drecrement Value:" />
            
			<EditText
				android:id="@+id/etIndevalue"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:singleLine="true"
				android:textColor="@android:color/black"
				android:inputType="number" />
            
			<RadioGroup
				android:id="@+id/rgIn"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">
                
				<RadioButton
					android:id="@+id/rbaIncrease"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:checked="true"
					android:textColor="@android:color/black"
					android:text="Increase" />
            
				<RadioButton
					android:id="@+id/rbDecrease"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="@android:color/black"
					android:text="Drecease" />
            
			</RadioGroup>
            
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textColor="@android:color/black"
				android:text="Add At:" />
            
			<EditText
				android:id="@+id/etAddAt"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="1"
				android:singleLine="true"
				android:textColor="@android:color/black"
				android:inputType="number" />
            
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textColor="@android:color/black"
				android:text="From:" />
            
			<RadioGroup
				android:id="@+id/rgOut"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">
                
				<RadioButton
					android:id="@+id/rbStarting"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:checked="true"
					android:textColor="@android:color/black"
					android:text="Starting" />
            
				<RadioButton
					android:id="@+id/rbEnd"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="@android:color/black"
					android:text="End" />
            
			</RadioGroup>
            
			<Button
				android:id="@+id/bApply"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="Preview" />
        
		</LinearLayout>
    
	</LinearLayout>
</ScrollView>
