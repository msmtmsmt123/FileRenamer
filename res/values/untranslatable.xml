<resources>
	<style name="Dialog" parent="android:Theme.Dialog" />
	<style name="Library" parent="android:Theme">
		<item name="android:windowNoTitle">true</item>
	</style>
	<style name="Playback" parent="android:Theme">
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowBackground">@null</item>
	</style>
	<style name="BackActionBar" parent="android:Theme" />
	<style name="AlertDialogItem">
		<item name="android:textColor">@android:color/primary_text_light</item>
	</style>
	<!-- Color used in LibraryActivity list dividers -->
	<color name="divider_color">#f444</color>
	<string-array name="entry_values">
		<!-- Note: even if this was an integer-array, these would be converted
		     to strings anyway.
		     http://code.google.com/p/android/issues/detail?id=2096 -->
		<item>On</item>
		<item>Off</item>
	</string-array>
	<string-array name="root_access_entries">
		<item>@string/enable_root</item>
		<item>@string/disable_root</item>
	</string-array>
	
	<string-array name="theme_type_values">
		<!-- This must match the order of swipe_action_entries exactly and
		     contain only values from PlaybackActivity.Action enum. -->
		<item>Holo Light</item>
		<item>Holo Dark</item>
		<item>Holo Light no Titlebar</item>
		<item>Holo Dark no Titlebar</item>
	</string-array>
	<string-array name="theme_type_entries">
		<!-- This must match the order of swipe_action_values exactly -->
		<item>@string/holo_light</item>
		<item>@string/holo_light_no_titlebar</item>
		<item>@string/holo_dark</item>
		<item>@string/holo_dark_no_titlebar</item>
	</string-array>
</resources>
